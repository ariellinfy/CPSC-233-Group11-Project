               <children>
                  <ToggleButton mnemonicParsing="false" prefWidth="106.0" text="Easy">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <toggleGroup>
                        <ToggleGroup fx:id="difficultyGroup" />
