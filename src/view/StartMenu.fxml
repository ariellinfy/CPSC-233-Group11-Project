                     </toggleGroup>
                     <font>
                        <Font size="18.0" />
                     </font>
                     <padding>
                        <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
                     </padding>
                  </ToggleButton>
                  <ToggleButton mnemonicParsing="false" prefWidth="79.5" text="13x13" toggleGroup="$boardSizeGroup">
