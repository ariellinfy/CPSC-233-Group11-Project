            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1">
               <children>
                  <ToggleButton mnemonicParsing="false" prefWidth="106.0" selected="true" text="Computer">
                     <toggleGroup>
                        <ToggleGroup fx:id="opponentGroup" />
                     </toggleGroup>
                     <font>
                        <Font size="18.0" />
                     </font>
                     <padding>
                        <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
                     </padding>
                  </ToggleButton>
